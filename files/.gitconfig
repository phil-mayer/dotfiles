[user]
    name = Phil Mayer
    email = me@pmayer.dev

[alias]
    b = branch
    d = diff
    l = log --graph --oneline
    s = status

[core]
    editor = vim
    excludesFile = ~/.gitignore
    trustctime = false

[credential]
    helper = osxkeychain

[diff]
    mnemonicprefix = true

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = simple
